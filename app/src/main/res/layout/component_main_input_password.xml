<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:layout_margin="@dimen/_12sdp">

    <TextView
        android:id="@+id/header_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_11ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray800"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="سرتيتر" />

    <com.majazeh.risloo.Utils.Interfaces.CutCopyPasteEditText
        android:id="@+id/input_editText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:paddingStart="@dimen/_12sdp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:gravity="center|right"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray700"
        android:textColorHint="@color/CoolGray400"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        android:importantForAutofill="no"
        android:saveEnabled="false"
        android:background="@drawable/draw_2sdp_solid_white_border_1sdp_coolgray500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_textView" />

    <ImageView
        android:id="@+id/visibility_imageView"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:padding="@dimen/_6sdp"
        android:tag="invisible"
        android:src="@drawable/ic_eye_slash_light"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/input_editText"
        app:layout_constraintEnd_toEndOf="@id/input_editText"
        app:layout_constraintTop_toTopOf="@id/input_editText"
        app:tint="@color/CoolGray500"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
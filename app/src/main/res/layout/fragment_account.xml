<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginEnd="@dimen/_12sdp"
    android:layout_marginStart="@dimen/_12sdp"
    android:layout_marginTop="@dimen/_24sdp"
    android:paddingBottom="@dimen/_12sdp"
    android:fitsSystemWindows="false"
    android:background="@drawable/draw_2sdp_solid_transparent_border_1sdp_gray200"
    android:layoutDirection="rtl"
    tools:context=".Views.Fragments.Default.AccountFragment">

    <ImageView
        android:id="@+id/fragment_account_background_imageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/_64sdp"
        android:layout_margin="@dimen/_1sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:background="@drawable/gra_2sdp_solid_blue100_blue50_border_2dp_gray200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/fragment_account_avatar_circleImageView"
        layout="@layout/component_avatar_oval_86sdp"
        android:layout_width="@dimen/_86sdp"
        android:layout_height="@dimen/_86sdp"
        android:layout_marginStart="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_background_imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_background_imageView" />

    <include
        android:id="@+id/fragment_account_enter_imageView"
        layout="@layout/component_button_oval_24sdp"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_avatar_circleImageView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        android:id="@+id/fragment_account_edit_textView"
        layout="@layout/component_button_rectangle_24sdp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_enter_imageView"
        app:layout_constraintEnd_toStartOf="@+id/fragment_account_enter_imageView"
        app:layout_constraintTop_toTopOf="@+id/fragment_account_enter_imageView" />

    <TextView
        android:id="@+id/fragment_account_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="start"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray900"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_bold"
        app:layout_constraintStart_toStartOf="@+id/fragment_account_avatar_circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_avatar_circleImageView"
        tools:text="نام و نام خانوادگی" />

    <ImageView
        android:id="@+id/fragment_account_name_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_badge_check_solid"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_name_textView"
        app:layout_constraintStart_toEndOf="@+id/fragment_account_name_textView"
        app:layout_constraintTop_toTopOf="@+id/fragment_account_name_textView"
        app:tint="@color/Blue500" />

    <TextView
        android:id="@+id/fragment_account_username_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="start"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintStart_toStartOf="@+id/fragment_account_avatar_circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_name_textView"
        tools:text="شناسه کاربری" />

    <ImageView
        android:id="@+id/fragment_account_birthday_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_calendar_light"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_birthday_textView"
        app:layout_constraintStart_toStartOf="@+id/fragment_account_username_textView"
        app:layout_constraintTop_toTopOf="@+id/fragment_account_birthday_textView"
        app:tint="@color/Gray500" />

    <TextView
        android:id="@+id/fragment_account_birthday_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintStart_toEndOf="@+id/fragment_account_birthday_imageView"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_username_textView"
        tools:text="تاریخ تولد" />

    <ImageView
        android:id="@+id/fragment_account_mobile_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_phone_light"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_mobile_textView"
        app:layout_constraintStart_toEndOf="@+id/fragment_account_birthday_textView"
        app:layout_constraintTop_toTopOf="@+id/fragment_account_mobile_textView"
        app:tint="@color/Gray500" />

    <TextView
        android:id="@+id/fragment_account_mobile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_birthday_textView"
        app:layout_constraintStart_toEndOf="@+id/fragment_account_mobile_imageView"
        app:layout_constraintTop_toTopOf="@+id/fragment_account_birthday_textView"
        tools:text="شماره همراه" />

    <ImageView
        android:id="@+id/fragment_account_email_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_envelope_light"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_account_email_textView"
        app:layout_constraintStart_toStartOf="@+id/fragment_account_birthday_imageView"
        app:layout_constraintTop_toTopOf="@+id/fragment_account_email_textView"
        app:tint="@color/Gray500" />

    <TextView
        android:id="@+id/fragment_account_email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:gravity="center"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintStart_toEndOf="@+id/fragment_account_email_imageView"
        app:layout_constraintTop_toBottomOf="@+id/fragment_account_birthday_textView"
        tools:text="ایمیل" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:background="@color/White"
    tools:context=".Views.Adapters.Recycler.BulkSamplesAdapter">

    <View
        android:id="@+id/top_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/serial_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="center|right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintBottom_toBottomOf="@+id/center_textView"
        app:layout_constraintEnd_toStartOf="@+id/name_textView"
        app:layout_constraintTop_toTopOf="@+id/room_textView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="سریال" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="center|right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.16"
        app:layout_constraintBottom_toBottomOf="@+id/center_textView"
        app:layout_constraintEnd_toStartOf="@+id/room_textView"
        app:layout_constraintTop_toTopOf="@+id/room_textView"
        app:layout_constraintStart_toEndOf="@id/serial_textView"
        tools:text="عنوان" />

    <TextView
        android:id="@+id/room_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintEnd_toStartOf="@+id/case_textView"
        app:layout_constraintTop_toBottomOf="@+id/top_view"
        app:layout_constraintStart_toEndOf="@+id/name_textView"
        tools:text="اتاق درمانی" />

    <TextView
        android:id="@+id/center_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="right"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/room_textView"
        app:layout_constraintTop_toBottomOf="@+id/room_textView"
        app:layout_constraintStart_toStartOf="@+id/room_textView"
        tools:text="مرکز درمانی" />

    <TextView
        android:id="@+id/case_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.18"
        app:layout_constraintBottom_toTopOf="@id/reference_textView"
        app:layout_constraintEnd_toStartOf="@+id/status_textView"
        app:layout_constraintStart_toEndOf="@+id/room_textView"
        app:layout_constraintTop_toTopOf="@+id/room_textView"
        tools:text="پرونده" />

    <TextView
        android:id="@+id/reference_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toBottomOf="@id/center_textView"
        app:layout_constraintEnd_toEndOf="@+id/case_textView"
        app:layout_constraintStart_toStartOf="@+id/case_textView"
        app:layout_constraintTop_toBottomOf="@+id/case_textView"
        tools:text="اعضا" />

    <TextView
        android:id="@+id/status_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="center|right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toBottomOf="@+id/reference_textView"
        app:layout_constraintEnd_toStartOf="@+id/link_imageView"
        app:layout_constraintStart_toEndOf="@+id/case_textView"
        app:layout_constraintTop_toTopOf="@+id/case_textView"
        tools:text="وضعیت" />

    <ImageView
        android:id="@+id/link_imageView"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:padding="@dimen/_5sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_link_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/Gray500" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:theme="@style/RadioButtonTheme"
    tools:layout_margin="@dimen/_12sdp">

    <RadioButton
        android:id="@+id/second_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        android:layoutDirection="rtl"
        tools:text="گزینه دوم" />

    <RadioButton
        android:id="@+id/first_radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        android:layoutDirection="rtl"
        tools:text="گزینه اول"
        tools:checked="true" />

    <CheckBox
        android:id="@+id/header_checkBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checked="false"
        android:gravity="center|start"
        android:textSize="@dimen/_11ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray800"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        android:layoutDirection="rtl"
        android:theme="@style/CheckBoxTheme"
        tools:text="گزینه‌ها" />

</RadioGroup>
<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:shimmer_colored="false"
    app:shimmer_base_alpha="1"
    app:shimmer_highlight_alpha="0"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/shimmer_item1"
            layout="@layout/shimmer_item_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/shimmer_item2"
            layout="@layout/shimmer_item_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/shimmer_item1"
            app:layout_constraintStart_toStartOf="@id/shimmer_item1"
            app:layout_constraintTop_toBottomOf="@id/shimmer_item1" />

        <include
            android:id="@+id/shimmer_item3"
            layout="@layout/shimmer_item_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/shimmer_item2"
            app:layout_constraintStart_toStartOf="@id/shimmer_item2"
            app:layout_constraintTop_toBottomOf="@id/shimmer_item2" />

        <include
            android:id="@+id/shimmer_item4"
            layout="@layout/shimmer_item_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/shimmer_item3"
            app:layout_constraintStart_toStartOf="@id/shimmer_item3"
            app:layout_constraintTop_toBottomOf="@id/shimmer_item3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
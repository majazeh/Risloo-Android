                app:layout_constraintStart_toStartOf="@id/public_question3_textView"
                app:layout_constraintTop_toBottomOf="@id/public_answer3_textView" />

            <include
                android:id="@+id/public_errorLayout"
                layout="@layout/component_main_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"

                android:textColor="@color/Gray600"
                android:textAlignment="gravity"
                android:fontFamily="@font/dana_regular"
                app:layout_constraintEnd_toEndOf="@id/public_answer1_header1_item2_textView"
                app:layout_constraintStart_toStartOf="@id/public_answer1_header1_item2_textView"
                app:layout_constraintTop_toBottomOf="@id/public_answer1_header2_textView" />

            <TextView
                android:id="@+id/public_answer1_header2_item2_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start"
                android:text="@string/EditUserTabCryptoPublicAnswer1Header2Item2"
                android:textSize="@dimen/_9ssp"
                android:textStyle="normal"
                android:textColor="@color/Gray600"
                android:textAlignment="gravity"
                android:fontFamily="@font/dana_regular"
                app:layout_constraintEnd_toEndOf="@id/public_answer1_header2_item1_textView"

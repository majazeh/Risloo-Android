<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray900"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    tools:context=".Views.Activities.DisplayActivity">

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/avatar_zoomageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.5"
        app:zoomage_zoomable="true"
        app:zoomage_translatable="true"
        app:zoomage_autoCenter="true"
        app:zoomage_restrictBounds="false"
        app:zoomage_animateOnReset="true"
        app:zoomage_doubleTapToZoom="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_doubleTapToZoomScaleFactor="3"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <include
        android:id="@+id/return_imageView"
        layout="@layout/component_main_button_square"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/download_imageView"
        layout="@layout/component_main_button_square"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:paddingBottom="@dimen/_6sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingTop="@dimen/_6sdp"
        android:gravity="center"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        android:textColor="@color/Gray200"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_bold"
        android:background="@drawable/draw_16sdp_solid_transparent_border_1sdp_gray300"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="نام و نام خانوادگی"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
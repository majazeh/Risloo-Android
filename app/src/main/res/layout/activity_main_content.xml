<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/White"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    tools:context=".Views.Activities.MainActivity">

    <include
        android:id="@+id/activity_main_content_menu_imageView"
        layout="@layout/component_button_square_36sdp"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/activity_main_content_logout_imageView"
        layout="@layout/component_button_square_36sdp"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/activity_main_content_account_imageView"
        layout="@layout/component_account_rectangle_36sdp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_content_logout_imageView"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_content_logout_imageView"
        app:layout_constraintTop_toTopOf="@+id/activity_main_content_logout_imageView" />

    <include
        android:id="@+id/activity_main_content_notification_imageView"
        layout="@layout/component_button_square_36sdp"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_content_account_imageView"
        app:layout_constraintEnd_toStartOf="@+id/activity_main_content_account_imageView"
        app:layout_constraintTop_toTopOf="@+id/activity_main_content_account_imageView" />

    <include
        android:id="@+id/activity_main_content_badge_textView"
        layout="@layout/component_badge_oval_16sdp"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/activity_main_content_notification_imageView"
        app:layout_constraintTop_toTopOf="@+id/activity_main_content_notification_imageView" />

    <TextView
        android:id="@+id/activity_main_content_location_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="right"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_demi_bold"
        app:layout_constraintStart_toStartOf="@+id/activity_main_content_menu_imageView"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_content_menu_imageView"
        tools:text="پیش‌خوان" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/activity_main_content_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/activity_main_content_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_content_location_textView"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation_main" />

    <View
        android:id="@+id/activity_main_content_bottom_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Gray200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layoutDirection="rtl"
    tools:context=".Views.Activities.MainActivity">

    <include
        android:id="@+id/debug_textView"
        layout="@layout/component_debug_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <include
        android:id="@+id/menu_imageView"
        layout="@layout/component_main_button_square"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/debug_textView" />

    <include
        android:id="@+id/enter_imageView"
        layout="@layout/component_main_button_square"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_includeLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_includeLayout"
        tools:visibility="visible" />

    <include
        android:id="@+id/toolbar_includeLayout"
        layout="@layout/component_main_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_goneMarginEnd="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@id/enter_imageView"
        app:layout_constraintTop_toBottomOf="@id/debug_textView" />

    <include
        android:id="@+id/notification_imageView"
        layout="@layout/component_main_button_square"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_includeLayout"
        app:layout_constraintEnd_toStartOf="@id/toolbar_includeLayout"
        app:layout_constraintTop_toTopOf="@id/toolbar_includeLayout"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/badge_textView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_bold"
        android:background="@drawable/draw_oval_solid_red500"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/notification_imageView"
        app:layout_constraintTop_toTopOf="@id/notification_imageView"
        tools:text="4"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/breadcump_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="start"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_demi_bold"
        app:layout_constraintBottom_toTopOf="@id/fragment_navHostFragment"
        app:layout_constraintEnd_toEndOf="@id/toolbar_includeLayout"
        app:layout_constraintStart_toStartOf="@id/menu_imageView"
        app:layout_constraintTop_toBottomOf="@id/menu_imageView"
        tools:text="پیش‌خوان" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_navHostFragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation_main"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/breadcump_textView"
        app:layout_goneMarginTop="@dimen/_12sdp" />

    <View
        android:id="@+id/bottom_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Gray200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
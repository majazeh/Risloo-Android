<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/component_button_rectangle_drawable_28sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingStart="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:layoutDirection="rtl"
    tools:background="@drawable/draw_16sdp_solid_transparent_border_1sdp_gray500">

    <ImageView
        android:id="@+id/component_button_rectangle_drawable_28sdp_imageView"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/component_button_rectangle_drawable_28sdp_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/component_button_rectangle_drawable_28sdp_textView"
        tools:src="@drawable/ic_ellipsis_light"
        tools:tint="@color/Gray500" />

    <TextView
        android:id="@+id/component_button_rectangle_drawable_28sdp_textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:gravity="center"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/component_button_rectangle_drawable_28sdp_imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="دکمه"
        tools:textColor="@color/Gray500" />

</androidx.constraintlayout.widget.ConstraintLayout>
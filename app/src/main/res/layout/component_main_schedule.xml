<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:background="@drawable/draw_2sdp_solid_white_border_1sdp_gray200_ripple_gray300"
    tools:layout_margin="@dimen/_12sdp">

    <ImageView
        android:id="@+id/avatar_imageView"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/title_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/title_textView"
        tools:src="@drawable/ic_calendar_day_light"
        tools:tint="@color/Gray400" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="center|start"
        android:lines="2"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/select_textView"
        app:layout_constraintStart_toEndOf="@id/avatar_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/_8sdp"
        tools:text="برنامه درمانی"
        tools:textColor="@color/Gray400" />

    <TextView
        android:id="@+id/select_textView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:paddingEnd="@dimen/_18sdp"
        android:paddingStart="@dimen/_8sdp"
        android:gravity="center"
        android:text="@string/DashboardFragmentHasSchedulesAction"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal"
        android:textColor="@color/Blue600"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_demi_bold"
        android:background="@drawable/draw_16sdp_solid_transparent_border_1sdp_blue600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/angle_imageView"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_angle_down_light"
        app:layout_constraintBottom_toBottomOf="@id/select_spinner"
        app:layout_constraintEnd_toEndOf="@id/select_spinner"
        app:layout_constraintTop_toTopOf="@id/select_spinner"
        app:tint="@color/Blue600" />

    <Spinner
        android:id="@+id/select_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="@dimen/_28sdp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/select_textView"
        app:layout_constraintEnd_toEndOf="@id/select_textView"
        app:layout_constraintStart_toStartOf="@id/select_textView"
        app:layout_constraintTop_toTopOf="@id/select_textView" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/select_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="select_textView, angle_imageView, select_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>
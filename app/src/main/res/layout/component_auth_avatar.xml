<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/component_auth_avatar"
    android:layout_width="@dimen/_64sdp"
    android:layout_height="@dimen/_64sdp"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="0dp">

    <ImageView
        android:id="@+id/component_auth_avatar_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:background="@color/Gray100" />

    <TextView
        android:id="@+id/component_auth_avatar_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray400"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        android:visibility="gone"
        tools:text="ال"
        tools:visibility="visible" />

</androidx.cardview.widget.CardView>
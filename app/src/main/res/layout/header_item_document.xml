<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_item_document"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:background="@drawable/draw_2sdp_solid_gray50_border_2dp_gray200"
    tools:context=".Views.Fragments.Index.DocumentsFragment">

    <TextView
        android:id="@+id/header_item_document_serial_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_4sdp"
        android:gravity="center|right"
        android:text="@string/DocumentsFragmentSerial"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/header_item_document_name_textView"
        app:layout_constraintEnd_toStartOf="@+id/header_item_document_name_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_item_document_name_textView" />

    <TextView
        android:id="@+id/header_item_document_name_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:gravity="center|right"
        android:text="@string/DocumentsFragmentName"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintHorizontal_weight="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/header_item_document_attachment_imageView"
        app:layout_constraintStart_toEndOf="@+id/header_item_document_serial_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header_item_document_attachment_imageView"
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:contentDescription="@string/AppImageContent"
        android:padding="@dimen/_6sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_paperclip_light"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/header_item_document_name_textView"
        app:layout_constraintEnd_toStartOf="@+id/header_item_document_status_textView"
        app:layout_constraintStart_toEndOf="@+id/header_item_document_name_textView"
        app:layout_constraintTop_toTopOf="@+id/header_item_document_name_textView"
        app:tint="@color/Gray500" />

    <TextView
        android:id="@+id/header_item_document_status_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="center|right"
        android:text="@string/DocumentsFragmentStatus"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintBottom_toBottomOf="@+id/header_item_document_name_textView"
        app:layout_constraintEnd_toStartOf="@+id/header_item_document_action_textView"
        app:layout_constraintStart_toEndOf="@+id/header_item_document_attachment_imageView"
        app:layout_constraintTop_toTopOf="@+id/header_item_document_name_textView" />

    <TextView
        android:id="@+id/header_item_document_action_textView"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/header_item_document_name_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/header_item_document_status_textView"
        app:layout_constraintTop_toTopOf="@+id/header_item_document_name_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
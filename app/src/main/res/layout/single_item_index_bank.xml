<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:padding="@dimen/_8sdp"
    android:background="@drawable/draw_2sdp_solid_white_border_1sdp_coolgray200_ripple_coolgray300"
    tools:layout_marginBottom="@dimen/_4sdp"
    tools:layout_marginTop="@dimen/_4sdp">

    <include
        android:id="@+id/avatar_includeLayout"
        layout="@layout/component_main_avatar_52sdp_img"
        android:layout_width="@dimen/_52sdp"
        android:layout_height="@dimen/_52sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iban_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="right"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        app:layout_constraintBottom_toTopOf="@id/name_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_includeLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="IR000000000000000000000000" />

    <TextView
        android:id="@+id/name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toTopOf="@id/status_textView"
        app:layout_constraintEnd_toEndOf="@id/iban_textView"
        app:layout_constraintStart_toStartOf="@id/iban_textView"
        app:layout_constraintTop_toBottomOf="@id/iban_textView"
        tools:text="نام و نام خانوادگی" />

    <TextView
        android:id="@+id/status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:paddingEnd="@dimen/_6sdp"
        android:paddingStart="@dimen/_6sdp"
        android:paddingTop="@dimen/_2sdp"
        android:gravity="right"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_demi_bold"
        app:layout_goneMarginTop="0dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iban_textView"
        app:layout_constraintStart_toStartOf="@id/iban_textView"
        app:layout_constraintTop_toBottomOf="@id/name_textView"
        tools:text="وضعیت"
        tools:textColor="@color/CoolGray400"
        android:background="@drawable/draw_16sdp_solid_coolgray50" />

</androidx.constraintlayout.widget.ConstraintLayout>
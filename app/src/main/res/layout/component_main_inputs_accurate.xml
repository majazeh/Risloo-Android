<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:layout_margin="@dimen/_12sdp">

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="0dp"
        android:layout_height="@dimen/_36sdp"
        android:paddingEnd="@dimen/_28sdp"
        android:paddingStart="@dimen/_12sdp"
        android:gravity="center|start"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        android:background="@drawable/draw_2sdp_solid_white_border_1sdp_coolgray500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/time_imageView"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_angle_down_light"
        app:layout_constraintBottom_toBottomOf="@id/time_textView"
        app:layout_constraintEnd_toEndOf="@id/time_textView"
        app:layout_constraintTop_toTopOf="@id/time_textView"
        app:tint="@color/CoolGray500" />

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="0dp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:paddingEnd="@dimen/_28sdp"
        android:paddingStart="@dimen/_12sdp"
        android:gravity="center|start"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        android:background="@drawable/draw_2sdp_solid_white_border_1sdp_coolgray500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time_textView" />

    <ImageView
        android:id="@+id/date_imageView"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_angle_down_light"
        app:layout_constraintBottom_toBottomOf="@id/date_textView"
        app:layout_constraintEnd_toEndOf="@id/date_textView"
        app:layout_constraintTop_toTopOf="@id/date_textView"
        app:tint="@color/CoolGray500" />

</androidx.constraintlayout.widget.ConstraintLayout>
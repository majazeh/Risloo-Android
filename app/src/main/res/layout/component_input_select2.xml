<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:layout_margin="@dimen/_16sdp">

    <TextView
        android:id="@+id/header_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/_11ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray800"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/select_container"
        app:layout_constraintStart_toStartOf="@+id/select_container"
        tools:text="سرتيتر" />

    <LinearLayout
        android:id="@+id/select_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_26sdp"
        android:minHeight="@dimen/_36sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/draw_2sdp_solid_transparent_border_1sdp_gray500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_textView" >

        <TextView
            android:id="@+id/primary_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal"
            android:textColor="@color/Gray700"
            android:textAlignment="gravity"
            android:fontFamily="@font/dana_medium" />

        <TextView
            android:id="@+id/secondary_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_minus2sdp"
            android:gravity="center|start"
            android:textSize="@dimen/_8ssp"
            android:textStyle="normal"
            android:textColor="@color/Gray600"
            android:textAlignment="gravity"
            android:fontFamily="@font/dana_regular" />

    </LinearLayout>

    <ImageView
        android:id="@+id/angle_imageView"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_angle_down_light"
        app:layout_constraintBottom_toBottomOf="@+id/select_container"
        app:layout_constraintEnd_toEndOf="@+id/select_container"
        app:layout_constraintTop_toTopOf="@id/select_container"
        app:tint="@color/Gray600" />

    <ImageView
        android:id="@+id/error_imageView"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_exclamation_triangle_light"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/select_container"
        app:layout_constraintTop_toTopOf="@+id/error_textView"
        app:tint="@color/Red500" />

    <TextView
        android:id="@+id/error_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:gravity="start"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal"
        android:textColor="@color/Red500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_light"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/error_imageView"
        app:layout_constraintTop_toBottomOf="@+id/select_container"
        tools:text="خطا" />

</androidx.constraintlayout.widget.ConstraintLayout>
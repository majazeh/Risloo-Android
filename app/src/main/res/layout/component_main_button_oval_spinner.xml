<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_28sdp"
    android:layout_height="@dimen/_28sdp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/select_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/AppImageContent"
        android:padding="@dimen/_6sdp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_ellipsis_v_light"
        tools:tint="@color/Gray500"
        tools:background="@drawable/draw_oval_solid_transparent_border_1sdp_gray500"/>

    <Spinner
        android:id="@+id/select_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:singleLine="true"
        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="@dimen/_32sdp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/select_imageView"
        app:layout_constraintEnd_toEndOf="@id/select_imageView"
        app:layout_constraintStart_toStartOf="@id/select_imageView"
        app:layout_constraintTop_toTopOf="@id/select_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
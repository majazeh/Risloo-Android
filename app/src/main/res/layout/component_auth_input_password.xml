<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:layout_margin="@dimen/_16sdp">

    <com.majazeh.risloo.Utils.Widgets.CutCopyPasteEditText
        android:id="@+id/input_editText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_36sdp"
        android:paddingEnd="@dimen/_32sdp"
        android:paddingStart="@dimen/_12sdp"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:gravity="center|right"
        android:textSize="@dimen/_12ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textColorHint="@color/Gray400"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        android:importantForAutofill="no"
        android:background="@drawable/draw_2sdp_solid_white_border_1sdp_gray200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="کلمه عبور" />

    <ImageView
        android:id="@+id/visibility_imageView"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:padding="@dimen/_5sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_eye_slash_light"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/input_editText"
        app:layout_constraintEnd_toEndOf="@id/input_editText"
        app:layout_constraintTop_toTopOf="@id/input_editText"
        app:tint="@color/Gray600"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/error_imageView"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_exclamation_triangle_light"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/input_editText"
        app:layout_constraintTop_toTopOf="@id/error_textView"
        app:tint="@color/Red500" />

    <TextView
        android:id="@+id/error_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="start"
        android:textSize="@dimen/_9ssp"
        android:textStyle="normal"
        android:textColor="@color/Red500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_light"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/error_imageView"
        app:layout_constraintTop_toBottomOf="@id/input_editText"
        tools:text="متن خطا" />

</androidx.constraintlayout.widget.ConstraintLayout>
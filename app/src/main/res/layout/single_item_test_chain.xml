<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:layout_margin="0dp">

    <View
        android:id="@+id/divider_view"
        android:layout_width="@dimen/_1sdp"
        android:layout_height="@dimen/_16sdp"
        android:background="@color/CoolGray200"
        app:layout_constraintBottom_toTopOf="@id/title_textView"
        app:layout_constraintEnd_toEndOf="@id/active_imageView"
        app:layout_constraintStart_toStartOf="@id/active_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/active_imageView"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/title_textView"
        app:layout_constraintTop_toTopOf="@id/title_textView"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="@drawable/draw_oval_solid_transparent_border_1sdp_gray500" />

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="right"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/active_imageView"
        app:layout_constraintTop_toBottomOf="@id/divider_view"
        tools:text="نمونه"
        tools:textColor="@color/CoolGray500"
        tools:fontFamily="@font/dana_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>
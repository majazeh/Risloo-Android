<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_item_sample"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:background="@color/White"
    tools:context=".Views.Adapters.Recycler.SamplesAdapter">

    <View
        android:id="@+id/single_item_sample_top_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/single_item_sample_serial_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_4sdp"
        android:gravity="center|right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/single_item_sample_edition_textView"
        app:layout_constraintEnd_toStartOf="@+id/single_item_sample_name_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/single_item_sample_name_textView"
        tools:text="سریال" />

    <TextView
        android:id="@+id/single_item_sample_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintEnd_toStartOf="@+id/single_item_sample_room_textView"
        app:layout_constraintStart_toEndOf="@+id/single_item_sample_serial_textView"
        app:layout_constraintTop_toBottomOf="@+id/single_item_sample_top_view"
        tools:text="عنوان" />

    <TextView
        android:id="@+id/single_item_sample_edition_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:gravity="right"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/single_item_sample_name_textView"
        app:layout_constraintStart_toStartOf="@+id/single_item_sample_name_textView"
        app:layout_constraintTop_toBottomOf="@+id/single_item_sample_name_textView"
        tools:text="ویرایش - نسخه" />

    <TextView
        android:id="@+id/single_item_sample_room_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintEnd_toStartOf="@+id/single_item_sample_reference_textView"
        app:layout_constraintStart_toEndOf="@+id/single_item_sample_name_textView"
        app:layout_constraintTop_toTopOf="@+id/single_item_sample_name_textView"
        tools:text="اتاق درمان" />

    <TextView
        android:id="@+id/single_item_sample_case_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/_7ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray500"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_constraintBottom_toBottomOf="@+id/single_item_sample_edition_textView"
        app:layout_constraintEnd_toEndOf="@+id/single_item_sample_room_textView"
        app:layout_constraintStart_toStartOf="@+id/single_item_sample_room_textView"
        app:layout_constraintTop_toBottomOf="@+id/single_item_sample_room_textView"
        tools:text="پرونده" />

    <TextView
        android:id="@+id/single_item_sample_reference_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:gravity="center|right"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        app:layout_goneMarginEnd="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@+id/single_item_sample_case_textView"
        app:layout_constraintEnd_toStartOf="@+id/single_item_sample_status_textView"
        app:layout_constraintStart_toEndOf="@+id/single_item_sample_room_textView"
        app:layout_constraintTop_toTopOf="@+id/single_item_sample_room_textView"
        tools:text="مراجع" />

    <TextView
        android:id="@+id/single_item_sample_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:minHeight="@dimen/_22sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:gravity="center"
        android:textSize="@dimen/_8ssp"
        android:textStyle="normal"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_medium"
        app:layout_constraintBottom_toBottomOf="@+id/single_item_sample_reference_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/single_item_sample_reference_textView"
        app:layout_constraintTop_toTopOf="@+id/single_item_sample_reference_textView"
        tools:text="دکمه"
        tools:textColor="@color/Gray500"
        tools:background="@drawable/draw_16sdp_solid_transparent_border_1sdp_gray500" />

</androidx.constraintlayout.widget.ConstraintLayout>
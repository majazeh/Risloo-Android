<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/component_index_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:layout_margin="@dimen/_16sdp">

    <EditText
        android:id="@+id/component_index_search_editText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_28sdp"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:hint="@string/AppSearchHint"
        android:gravity="center|start"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal"
        android:textColor="@color/Gray700"
        android:textColorHint="@color/Gray400"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_regular"
        android:importantForAutofill="no"
        android:background="@drawable/draw_2sdp_solid_white_border_1sdp_gray200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/component_index_search_progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:padding="@dimen/_4sdp"
        android:visibility="gone"
        android:theme="@style/ProgressBarTheme"
        app:layout_constraintBottom_toBottomOf="@+id/component_index_search_editText"
        app:layout_constraintEnd_toEndOf="@+id/component_index_search_editText"
        app:layout_constraintTop_toTopOf="@id/component_index_search_editText"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
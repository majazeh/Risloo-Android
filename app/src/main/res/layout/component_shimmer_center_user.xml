            android:id="@+id/shimmer_item3"
            layout="@layout/shimmer_item_center_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/shimmer_item2"
            app:layout_constraintStart_toStartOf="@+id/shimmer_item2"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_item2" />

        <include
            android:id="@+id/shimmer_item4"
            layout="@layout/shimmer_item_center_user"

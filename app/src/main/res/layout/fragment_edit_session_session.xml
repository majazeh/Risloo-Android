<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:fillViewport="true"
    android:scrollbarSize="0dp"
    android:overScrollMode="always"
    android:layoutDirection="rtl"
    tools:context=".Views.Fragments.Tab.EditSessionSessionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_12sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/draw_2sdp_solid_transparent_border_1sdp_gray200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/type_includeLayout"
                layout="@layout/component_main_input_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <include
                android:id="@+id/type_errorLayout"
                layout="@layout/component_main_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/type_includeLayout"
                app:layout_constraintStart_toStartOf="@id/type_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/type_includeLayout" />

            <include
                android:id="@+id/status_includeLayout"
                layout="@layout/component_main_input_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/type_includeLayout"
                app:layout_constraintStart_toStartOf="@id/type_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/type_errorLayout" />

            <include
                android:id="@+id/status_errorLayout"
                layout="@layout/component_main_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/status_includeLayout"
                app:layout_constraintStart_toStartOf="@id/status_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/status_includeLayout" />

            <include
                android:id="@+id/scheduled_includeLayout"
                layout="@layout/component_layout_scheduled"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/type_includeLayout"
                app:layout_constraintStart_toStartOf="@id/type_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/status_errorLayout" />

            <include
                android:id="@+id/axis_includeLayout"
                layout="@layout/component_main_input_recycler"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/type_includeLayout"
                app:layout_constraintStart_toStartOf="@id/type_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/scheduled_includeLayout" />

            <include
                android:id="@+id/axis_errorLayout"
                layout="@layout/component_main_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/axis_includeLayout"
                app:layout_constraintStart_toStartOf="@id/axis_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/axis_includeLayout" />

            <include
                android:id="@+id/axis_guideLayout"
                layout="@layout/component_main_guide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_goneMarginTop="@dimen/_6sdp"
                app:layout_constraintEnd_toEndOf="@id/axis_includeLayout"
                app:layout_constraintStart_toStartOf="@id/axis_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/axis_errorLayout" />

            <include
                android:id="@+id/description_includeLayout"
                layout="@layout/component_main_input_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/type_includeLayout"
                app:layout_constraintStart_toStartOf="@id/type_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/axis_guideLayout" />

            <include
                android:id="@+id/description_errorLayout"
                layout="@layout/component_main_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/description_includeLayout"
                app:layout_constraintStart_toStartOf="@id/description_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/description_includeLayout" />

            <include
                android:id="@+id/coordination_includeLayout"
                layout="@layout/component_main_input_multi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@id/type_includeLayout"
                app:layout_constraintStart_toStartOf="@id/type_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/description_errorLayout" />

            <include
                android:id="@+id/coordination_errorLayout"
                layout="@layout/component_main_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/coordination_includeLayout"
                app:layout_constraintStart_toStartOf="@id/coordination_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/coordination_includeLayout" />

            <include
                android:id="@+id/coordination_guideLayout"
                layout="@layout/component_main_guide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_goneMarginTop="@dimen/_6sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/coordination_includeLayout"
                app:layout_constraintStart_toStartOf="@id/coordination_includeLayout"
                app:layout_constraintTop_toBottomOf="@id/coordination_errorLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/edit_textView"
            layout="@layout/component_main_button_rect_big"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintRight_toRightOf="@id/container_constraintLayout"
            app:layout_constraintTop_toBottomOf="@id/container_constraintLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
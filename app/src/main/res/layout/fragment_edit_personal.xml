<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_edit_personal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:fillViewport="true"
    android:scrollbarSize="0dp"
    android:overScrollMode="always"
    android:layoutDirection="rtl"
    tools:context=".Views.Fragments.Create.EditPersonalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_edit_personal_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:background="@drawable/draw_2sdp_solid_transparent_border_1sdp_gray200">

        <include
            android:id="@+id/fragment_edit_personal_name_editText"
            layout="@layout/component_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/fragment_edit_personal_mobile_editText"
            layout="@layout/component_input_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_name_editText"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_name_editText"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_name_editText" />

        <include
            android:id="@+id/fragment_edit_personal_username_editText"
            layout="@layout/component_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_mobile_editText"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_mobile_editText"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_mobile_editText" />

        <include
            android:id="@+id/fragment_edit_personal_username_guide_constraintLayout"
            layout="@layout/component_guide_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_username_editText"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_username_editText"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_username_editText" />

        <include
            android:id="@+id/fragment_edit_personal_email_editText"
            layout="@layout/component_input_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_username_guide_constraintLayout"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_username_guide_constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_username_guide_constraintLayout" />

        <include
            android:id="@+id/fragment_edit_personal_birthday_selectBox"
            layout="@layout/component_input_select"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_email_editText"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_email_editText"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_email_editText" />

        <include
            android:id="@+id/fragment_edit_personal_status_radioGroup"
            layout="@layout/component_radio_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_birthday_selectBox"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_birthday_selectBox"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_birthday_selectBox" />

        <include
            android:id="@+id/fragment_edit_personal_type_radioGroup"
            layout="@layout/component_radio_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_status_radioGroup"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_status_radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_status_radioGroup" />

        <include
            android:id="@+id/fragment_edit_personal_gender_radioGroup"
            layout="@layout/component_radio_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_type_radioGroup"
            app:layout_constraintStart_toStartOf="@+id/fragment_edit_personal_type_radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_type_radioGroup" />

        <include
            android:id="@+id/fragment_edit_personal_button_textView"
            layout="@layout/component_button_rectangle_32sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_edit_personal_gender_radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/fragment_edit_personal_gender_radioGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
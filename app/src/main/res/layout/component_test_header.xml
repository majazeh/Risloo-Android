<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:layout_margin="@dimen/_12sdp">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:textSize="@dimen/_13ssp"
        android:textStyle="normal"
        android:textColor="@color/CoolGray800"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_bold"
        tools:text="آزمون" />

    <ProgressBar
        android:id="@+id/answered_progressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:progress="0"
        android:progressDrawable="@drawable/draw_prog_2sdp_solid_coolgray200_risloo500"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        tools:progress="25" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:paddingBottom="@dimen/_12sdp"
    android:paddingEnd="@dimen/_12sdp"
    android:paddingStart="@dimen/_12sdp"
    android:paddingTop="@dimen/_18sdp"
    android:background="@drawable/draw_2sdp_solid_white_border_1sdp_gray200_ripple_gray300"
    tools:layout_margin="@dimen/_12sdp">

    <ImageView
        android:id="@+id/select_imageView"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_gravity="center"
        android:contentDescription="@string/AppImageContent"
        android:scaleType="fitCenter"
        tools:src="@drawable/ic_plus_light"
        tools:tint="@color/Gray500" />

    <TextView
        android:id="@+id/select_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:textSize="@dimen/_9ssp"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:fontFamily="@font/dana_bold"
        tools:text="دکمه"
        tools:textColor="@color/Gray500" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_item_sample"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    tools:background="@color/White"
    tools:context=".Views.Adapters.Recycler.SamplesAdapter">

    <View
        android:id="@+id/shimmer_item_sample_top_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/Gray200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/shimmer_item_sample_serial_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:textSize="@dimen/_8ssp"
        android:background="@color/Gray50"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_item_sample_edition_textView"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_item_sample_name_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmer_item_sample_name_textView" />

    <TextView
        android:id="@+id/shimmer_item_sample_name_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:textSize="@dimen/_8ssp"
        android:background="@color/Gray50"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_item_sample_room_textView"
        app:layout_constraintStart_toEndOf="@+id/shimmer_item_sample_serial_textView"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_item_sample_top_view" />

    <TextView
        android:id="@+id/shimmer_item_sample_edition_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_7ssp"
        android:background="@color/Gray50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_item_sample_name_textView"
        app:layout_constraintStart_toStartOf="@+id/shimmer_item_sample_name_textView"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_item_sample_name_textView" />

    <TextView
        android:id="@+id/shimmer_item_sample_room_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8ssp"
        android:background="@color/Gray50"
        app:layout_constraintWidth_percent="0.22"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_item_sample_reference_textView"
        app:layout_constraintStart_toEndOf="@+id/shimmer_item_sample_name_textView"
        app:layout_constraintTop_toTopOf="@+id/shimmer_item_sample_name_textView" />

    <TextView
        android:id="@+id/shimmer_item_sample_case_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_7ssp"
        android:background="@color/Gray50"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_item_sample_edition_textView"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_item_sample_room_textView"
        app:layout_constraintStart_toStartOf="@+id/shimmer_item_sample_room_textView"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_item_sample_room_textView" />

    <TextView
        android:id="@+id/shimmer_item_sample_reference_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:textSize="@dimen/_8ssp"
        android:background="@color/Gray50"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_item_sample_case_textView"
        app:layout_constraintEnd_toStartOf="@+id/shimmer_item_sample_status_textView"
        app:layout_constraintStart_toEndOf="@+id/shimmer_item_sample_room_textView"
        app:layout_constraintTop_toTopOf="@+id/shimmer_item_sample_room_textView" />

    <TextView
        android:id="@+id/shimmer_item_sample_status_textView"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/draw_16sdp_solid_gray50"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_item_sample_reference_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shimmer_item_sample_reference_textView"
        app:layout_constraintTop_toTopOf="@+id/shimmer_item_sample_reference_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/draw_2sdp_solid_white_border_1sdp_gray200">

    <View
        android:id="@+id/background_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_64sdp"
        android:layout_margin="@dimen/_1sdp"
        android:background="@drawable/draw_2sdp_solid_gray50_border_bottom_2dp_gray200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="@dimen/_66sdp"
        android:background="@drawable/draw_oval_solid_gray50_border_2sdp_white"
        app:layout_constraintBottom_toBottomOf="@id/background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_view" />

    <View
        android:id="@+id/name_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/draw_2sdp_solid_gray50"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_view" />

    <View
        android:id="@+id/type_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/draw_2sdp_solid_gray50"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
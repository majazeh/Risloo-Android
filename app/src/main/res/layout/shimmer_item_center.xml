<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/draw_2sdp_solid_white_border_1sdp_coolgray200">

    <View
        android:id="@+id/background_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_84sdp"
        android:layout_margin="@dimen/_1sdp"
        android:background="@drawable/draw_2sdp_solid_coolgray100_border_bottom_1sdp_coolgray200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/avatar_view"
        android:layout_width="@dimen/_86sdp"
        android:layout_height="@dimen/_86sdp"
        android:background="@drawable/draw_oval_solid_coolgray100_border_4sdp_white"
        app:layout_constraintBottom_toBottomOf="@id/background_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_view" />

    <View
        android:id="@+id/name_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/draw_2sdp_solid_coolgray100"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_view" />

    <View
        android:id="@+id/type_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/draw_2sdp_solid_coolgray100"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_view" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_test"
    app:startDestination="@id/testFormFragment">

    <fragment
        android:id="@+id/testFormFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestFormFragment"
        android:label="@string/TestFormFragmentTitle"
        tools:layout="@layout/fragment_test_form" >
        <action
            android:id="@+id/action_testFormFragment_to_testDescriptionFragment"
            app:destination="@id/testDescriptionFragment" />
        <action
            android:id="@+id/action_testFormFragment_to_testEndFragment"
            app:destination="@id/testEndFragment" />
    </fragment>

    <fragment
        android:id="@+id/testDescriptionFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestDescriptionFragment"
        android:label="@string/TestDescriptionFragmentTitle"
        tools:layout="@layout/fragment_test_description" />

    <fragment
        android:id="@+id/testEndFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestEndFragment"
        android:label="@string/TestEndFragmentTitle"
        tools:layout="@layout/fragment_test_end" />

</navigation>
        android:label="@string/ChainFragmentTitle"
        tools:layout="@layout/fragment_test_chain" />

    <fragment
        android:id="@+id/testDescriptionFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestDescriptionFragment"
        android:label="@string/DescriptionFragmentTitle"
        tools:layout="@layout/fragment_test_description" />

    <fragment
        android:id="@+id/testEndFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestEndFragment"
        android:label="@string/EndFragmentTitle"
        tools:layout="@layout/fragment_test_end" />

    <fragment
        android:id="@+id/testEntityFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestEntityFragment"
        android:label="@string/EntityFragmentTitle"

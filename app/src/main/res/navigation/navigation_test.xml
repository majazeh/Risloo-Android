    <fragment
        android:id="@+id/testPrerequisiteFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestPrerequisiteFragment"
        android:label="@string/PrerequisiteFragmentTitle"
        tools:layout="@layout/fragment_test_prerequisite" />

    <fragment
        android:id="@+id/testPsyDescFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Test.TestPsyDescFragment"
        android:label="@string/PsyDescFragmentTitle"
        tools:layout="@layout/fragment_test_psy_desc" />

    ---------- // Actions

    <action
        android:id="@+id/action_global_testChainFragment"
        app:destination="@id/testChainFragment" />

    <action
        android:id="@+id/action_global_testDescriptionFragment"
        app:destination="@id/testDescriptionFragment" />

    <action
        android:id="@+id/action_global_testEndFragment"
        app:destination="@id/testEndFragment" />

    <action
        android:id="@+id/action_global_testEntityFragment"
        app:destination="@id/testEntityFragment" />

    <action
        android:id="@+id/action_global_testDescriptiveFragment"
        app:destination="@id/testDescriptiveFragment" />

    <action
        android:id="@+id/action_global_testOptionalFragment"
        app:destination="@id/testOptionalFragment" />

    <action
        android:id="@+id/action_global_testPictoralFragment"
        app:destination="@id/testPictoralFragment" />

    <action
        android:id="@+id/action_global_testPrerequisiteFragment"
        app:destination="@id/testPrerequisiteFragment" />

    <action
        android:id="@+id/action_global_testPsyDescFragment"
        app:destination="@id/testPsyDescFragment" />


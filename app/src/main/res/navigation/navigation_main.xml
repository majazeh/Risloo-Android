<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Show.AccountFragment"
        android:label="@string/AccountFragmentTitle"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_accountFragment_to_editAccountFragment"
            app:destination="@id/editAccountFragment" />
        <action
            android:id="@+id/action_accountFragment_to_createDocumentFragment"
            app:destination="@id/createDocumentFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Show.DashboardFragment"
        android:label="@string/DashboardFragmentTitle"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_centersFragment"
            app:destination="@id/centersFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_casesFragment"
            app:destination="@id/casesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_sessionsFragment"
            app:destination="@id/sessionsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_scalesFragment"
            app:destination="@id/scalesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_samplesFragment"
            app:destination="@id/samplesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_documentsFragment"
            app:destination="@id/documentsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/centersFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.CentersFragment"
        android:label="@string/CentersFragmentTitle"
        tools:layout="@layout/fragment_centers" >
        <action
            android:id="@+id/action_centersFragment_to_createCenterFragment"
            app:destination="@id/createCenterFragment" />
        <action
            android:id="@+id/action_centersFragment_to_centerFragment"
            app:destination="@id/centerFragment" />
    </fragment>

    <fragment
        android:id="@+id/casesFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.CasesFragment"
        android:label="@string/CasesFragmentTitle"
        tools:layout="@layout/fragment_cases" >
        <action
            android:id="@+id/action_casesFragment_to_createCaseFragment"
            app:destination="@id/createCaseFragment" />
    </fragment>

    <fragment
        android:id="@+id/sessionsFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.SessionsFragment"
        android:label="@string/SessionsFragmentTitle"
        tools:layout="@layout/fragment_sessions" >
        <action
            android:id="@+id/action_sessionsFragment_to_createSessionFragment"
            app:destination="@id/createSessionFragment" />
    </fragment>

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.UsersFragment"
        android:label="@string/UsersFragmentTitle"
        tools:layout="@layout/fragment_users" >
        <action
            android:id="@+id/action_usersFragment_to_createUserFragment"
            app:destination="@id/createUserFragment" />
    </fragment>

    <fragment
        android:id="@+id/scalesFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.ScalesFragment"
        android:label="@string/ScalesFragmentTitle"
        tools:layout="@layout/fragment_scales" />

    <fragment
        android:id="@+id/samplesFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.SamplesFragment"
        android:label="@string/SamplesFragmentTitle"
        tools:layout="@layout/fragment_samples" >
        <action
            android:id="@+id/action_samplesFragment_to_createSampleFragment"
            app:destination="@id/createSampleFragment" />
    </fragment>

    <fragment
        android:id="@+id/documentsFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.DocumentsFragment"
        android:label="@string/DocumentsFragmentTitle"
        tools:layout="@layout/fragment_documents" >
        <action
            android:id="@+id/action_documentsFragment_to_createDocumentFragment"
            app:destination="@id/createDocumentFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.SettingsFragment"
        android:label="@string/SettingsFragmentTitle"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/createCenterFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.CreateCenterFragment"
        android:label="@string/CreateCenterFragmentTitle"
        tools:layout="@layout/fragment_create_center" />

    <fragment
        android:id="@+id/createCaseFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.CreateCaseFragment"
        android:label="@string/CreateCaseFragmentTitle"
        tools:layout="@layout/fragment_create_case" />

    <fragment
        android:id="@+id/createSessionFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.CreateSessionFragment"
        android:label="@string/CreateSessionFragmentTitle"
        tools:layout="@layout/fragment_create_session" />

    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.CreateUserFragment"
        android:label="@string/CreateUserFragmentTitle"
        tools:layout="@layout/fragment_create_user" />

    <fragment
        android:id="@+id/createSampleFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.CreateSampleFragment"
        android:label="@string/CreateSampleFragmentTitle"
        tools:layout="@layout/fragment_create_sample" />

    <fragment
        android:id="@+id/createDocumentFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.CreateDocumentFragment"
        android:label="@string/CreateDocumentFragmentTitle"
        tools:layout="@layout/fragment_create_document" />

    <fragment
        android:id="@+id/editAccountFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.EditAccountFragment"
        android:label="@string/EditAccountFragmentTitle"
        tools:layout="@layout/fragment_edit_account" />

    <fragment
        android:id="@+id/centerFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Show.CenterFragment"
        android:label="@string/CenterFragmentTitle"
        tools:layout="@layout/fragment_center" />

</navigation>
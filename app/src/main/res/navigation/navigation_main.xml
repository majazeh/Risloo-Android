<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Show.DashboardFragment"
        android:label="@string/DashboardFragmentTitle"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_centersFragment"
            app:destination="@id/centersFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_usersFragment"
            app:destination="@id/usersFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_scalesFragment"
            app:destination="@id/scalesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_samplesFragment"
            app:destination="@id/samplesFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_documentsFragment"
            app:destination="@id/documentsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_settingsFragment2"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>

    <fragment
        android:id="@+id/centersFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.CentersFragment"
        android:label="@string/CentersFragmentTitle"
        tools:layout="@layout/fragment_centers" />

    <fragment
        android:id="@+id/usersFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.UsersFragment"
        android:label="@string/UsersFragmentTitle"
        tools:layout="@layout/fragment_users" />

    <fragment
        android:id="@+id/scalesFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.ScalesFragment"
        android:label="@string/ScalesFragmentTitle"
        tools:layout="@layout/fragment_scales" />

    <fragment
        android:id="@+id/samplesFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.SamplesFragment"
        android:label="@string/SamplesFragmentTitle"
        tools:layout="@layout/fragment_samples" />

    <fragment
        android:id="@+id/documentsFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.DocumentsFragment"
        android:label="@string/DocumentsFragmentTitle"
        tools:layout="@layout/fragment_documents" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Index.SettingsFragment"
        android:label="@string/SettingsFragmentTitle"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Show.AccountFragment"
        android:label="@string/AccountFragmentTitle"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_accountFragment_to_editAccountFragment"
            app:destination="@id/editAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/editAccountFragment"
        android:name="com.majazeh.risloo.Views.Fragments.Create.EditAccountFragment"
        android:label="@string/EditAccountFragmentTitle"
        tools:layout="@layout/fragment_edit_account" />

</navigation>